{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
          ],
          "linebreak-style": [
            "error",
            "unix"
          ],
          "quotes": [
            "error",
            "single"
          ],
          "semi": [
            "error",
            "always"
          ]
    }
}
